<nav class="navbar">
    <script>
        let isMobile = <%= isMobile %>;
        let hamburger = <%= hamburger %>;

        document.addEventListener('DOMContentLoaded', () => {
            const handleScroll = () => {
                const header = document.querySelector('.navbar');
                const min = window.innerWidth < 500 ? 50 : 480;
                if (window.scrollY > min) {
                    header.classList.add('nav-small');
                } else {
                    header.classList.remove('nav-small');
                }
            };
            window.addEventListener('scroll', handleScroll);

            const handleResize = () => {
                isMobile = window.innerWidth < 500;
            };

            window.addEventListener('resize', handleResize);
            handleResize();
        });
    </script>
    <div class="nav-left">
        <% if (page !== 'login' && page !== 'register') { %>
            <div onclick="<%= hamburger ? 'setHamburger(false)' : 'setHamburger(true)' %>"
                class="hamburger">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                    <path fill-rule="evenodd" clip-rule="evenodd"
                          d="M3 5C3 3.89543 3.89543 3 5 3C6.10457 3 7 3.89543 7 5C7 6.10457 6.10457 7 5 7C3.89543 7 3 6.10457 3 5ZM10 5C10 3.89543 10.8954 3 12 3C13.1046 3 14 3.89543 14 5C14 6.10457 13.1046 7 12 7C10.8954 7 10 6.10457 10 5ZM17 5C17 3.89543 17.8954 3 19 3C20.1046 3 21 3.89543 21 5C21 6.10457 20.1046 7 19 7C17.8954 7 17 6.10457 17 5ZM3 12C3 10.8954 3.89543 10 5 10C6.10457 10 7 10.8954 7 12C7 13.1046 6.10457 14 5 14C3.89543 14 3 13.1046 3 12ZM10 12C10 10.8954 10.8954 10 12 10C13.1046 10 14 10.8954 14 12C14 13.1046 13.1046 14 12 14C10.8954 14 10 13.1046 10 12ZM17 12C17 10.8954 17.8954 10 19 10C20.1046 10 21 10.8954 21 12C21 13.1046 20.1046 14 19 14C17.8954 14 17 13.1046 17 12ZM3 19C3 17.8954 3.89543 17 5 17C6.10457 17 7 17.8954 7 19C7 20.1046 6.10457 21 5 21C3.89543 21 3 20.1046 3 19ZM10 19C10 17.8954 10.8954 17 12 17C13.1046 17 14 17.8954 14 19C14 20.1046 13.1046 21 12 21C10.8954 21 10 20.1046 10 19ZM17 19C17 17.8954 17.8954 17 19 17C20.1046 17 21 17.8954 21 19C21 20.1046 20.1046 21 19 21C17.8954 21 17 20.1046 17 19Z"
                          fill="white"/>
                </svg>
            </div>
        <% } %>
        <a href="/" class="nebe-logo">NEBE</a>
        <% if (page !== 'login' && page !== 'register') { %>
            <div class="nav-tabs">
                <a onclick="scrollToSection('solutions');" class="nav-tab">Solutions</a>
                <a onclick="scrollToSection('contact');" class="nav-tab">Contact us</a>
            </div>
        <% } %>
    </div>
    <div class="nav-right">
        <a style="display: <%= (page === 'login' || page === 'register') && !isMobile ? 'none' : 'block' %>;" href="<%= page === 'login' ? '/register' : '/login' %>" class="nav-tab"><%= page === 'login' ? 'Register' : 'Login' %></a>
        <a href="<%= page === 'register' ? '/login' : '/register' %>" class="nav-register"><%= page === 'register' ? 'Login' : 'Register' %></a>
    </div>
</nav>

<% if (hamburger && isMobile) { %>
    <div class="manu-box">
        <svg onclick="setHamburger(false)" class="cross" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path d="M21 3L3 21M3.00002 3L21 21" stroke="white" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <a onclick="scrollToSection('solutions'); setHamburger(false);" class="manus">
            Solutions
        </a>
        <a onclick="scrollToSection('contact'); setHamburger(false);" class="manus">
            Contact us
        </a>
    </div>
<% } %>
